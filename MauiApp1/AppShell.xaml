<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AuctionMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AuctionMobileApp"
    xmlns:page="clr-namespace:AuctionMobileApp.Page"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="Black"
    Shell.TitleColor="White"
    Shell.ForegroundColor="#F8B045"
    Shell.TabBarBackgroundColor="Gray"
    Shell.TabBarForegroundColor="#F8B045"
    Shell.TabBarUnselectedColor="LightGray"
    Shell.TabBarTitleColor="#F8B045"
    Shell.TabBarDisabledColor="Gray">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackCommand}"
                            IconOverride="back.png" />
    </Shell.BackButtonBehavior>
    
    <TabBar>
        <Tab Title="Subastas" Icon="auction.png" >
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Productos" Icon="cubes.png">
            <ShellContent ContentTemplate="{DataTemplate page:ViewAllProductsPage}"/>
        </Tab>
        <Tab Title="Ganadores" Icon="trophy.png">
            <ShellContent ContentTemplate="{DataTemplate page:ViewWinnerPage}"/>
        </Tab>
    </TabBar>

    <ShellContent Route="ViewProducts" ContentTemplate="{DataTemplate page:ViewProducts}" />


</Shell>
