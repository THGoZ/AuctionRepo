<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuctionMobileApp.Page.ViewProducts"
             Title="{Binding PageTitle}"
             BackgroundColor="#232323"
             Shell.TabBarIsVisible="False">

    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding ProductoList}" FlexLayout.Grow="1" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- Elimina ViewCell y simplifica el contenido -->
                    <Frame CornerRadius="30" Padding="0" Margin="10" BorderColor="Gray" HasShadow="True">
                        <VerticalStackLayout>
                            <!-- Parte superior amarilla con el nombre del producto -->
                            <Grid BackgroundColor="#FFB32E" Padding="10">
                                <HorizontalStackLayout>
                                    <!-- Imagen del producto -->
                                    <Image Source="{Binding Image}" WidthRequest="90" HeightRequest="90" Aspect="AspectFill" />

                                    <!-- Nombre del producto -->
                                    <Label Text="{Binding Nombre}" VerticalOptions="Center" FontAttributes="Bold" FontSize="Medium" TextColor="Black"/>
                                </HorizontalStackLayout>
                            </Grid>

                            <!-- Parte inferior con la descripción y otros detalles -->
                            <VerticalStackLayout Padding="10" BackgroundColor="#4B4B4B">
                                <!-- Descripción del producto -->
                                <Label Text="{Binding Descripcion}" FontAttributes="Italic" HorizontalOptions="FillAndExpand" TextColor="White"/>

                                <!-- Detalles de cantidad de ofertas -->
                                <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Columna izquierda -->
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label Text="{Binding CantidadDeOfertas, StringFormat='Ofertas: {0}'}" FontAttributes="Italic" TextColor="White" />
                                    </VerticalStackLayout>

                                    <!-- Columna derecha -->
                                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="End">
                                        <Label Text="{Binding CantidadProductos, StringFormat='Productos: {0}'}" FontAttributes="Italic" HorizontalOptions="End" TextColor="White"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>


