<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuctionMobileApp.Page.ViewAllProductsPage"
             Title="Todos los Productos"
             BackgroundColor="#232323">

    <ScrollView>
    <VerticalStackLayout>
        <!-- CollectionView con diseño actualizado -->
        <CollectionView ItemsSource="{Binding ProductoList}" 
                        SelectionMode="None"
                        BackgroundColor="Transparent"
                        VerticalOptions="FillAndExpand"
                        ItemsLayout="VerticalList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- Frame con bordes redondeados -->
                    <Frame CornerRadius="30" Padding="0" Margin="10" BorderColor="Transparent" HasShadow="False">
                        <VerticalStackLayout>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Título del producto a la izquierda -->
                                    <VerticalStackLayout Padding="10" Grid.Column="0" BackgroundColor="#FFB32E">
                                        <Label Text="{Binding Nombre}" 
                                               VerticalOptions="Center" 
                                               FontAttributes="Bold" 
                                               FontSize="Medium" 
                                               TextColor="Black"/>
                                    </VerticalStackLayout>

                                    <Frame Grid.Column="1" Padding="0" CornerRadius="0" IsClippedToBounds="True" BackgroundColor="Transparent" Margin="0">
                                        <Image Source="{Binding Image}" 
                                               WidthRequest="120" 
                                               HeightRequest="120" 
                                               Aspect="AspectFill" />
                                    </Frame>
                                </Grid>
                                    <!-- Parte inferior con la descripción y otros detalles -->
                            <VerticalStackLayout Padding="10" BackgroundColor="#4B4B4B">
                                <!-- Descripción del producto -->
                                <Label Text="{Binding Descripcion}" 
                                       FontAttributes="Italic" 
                                       HorizontalOptions="FillAndExpand" 
                                       TextColor="White"/>

                                <!-- Detalles de cantidad de ofertas y productos -->
                                <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Cantidad de ofertas -->
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label Text="{Binding CantidadDeOfertas, StringFormat='Ofertas: {0}'}" 
                                               FontAttributes="Italic" 
                                               TextColor="White"/>
                                    </VerticalStackLayout>

                                    <!-- Cantidad de productos -->
                                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="End">
                                        <Label Text="{Binding CantidadProductos, StringFormat='Productos: {0}'}" 
                                               FontAttributes="Italic" 
                                               HorizontalOptions="End" 
                                               TextColor="White"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
        </ScrollView>
</ContentPage>

